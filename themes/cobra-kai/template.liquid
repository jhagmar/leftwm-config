{% for tag in workspace.tags %}
{% if tag.mine %}
{% if tag.focused %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#000000}%{B#00e5e8}  {{tag.name}}  %{B-}%{F-}
%{A}
{% else %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#ffffff}%{B#007c77}  {{tag.name}}  %{B-}%{F-}
%{A}
{% endif %}
{% elsif tag.urgent %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#ffffff}%{B#c33c54}  {{tag.name}}  %{F-}%{B-}
%{A}
{% elsif tag.visible  %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#ffffff}%{B#52556e}  {{tag.name}}  %{B-}%{F-}
%{A}
{% elsif tag.busy %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#000000}%{B#c1b098} {{tag.name}}  %{F-}
%{A}
{% else %}
%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
%{F#FFFFFF}%{B#303030}  {{tag.name}}  %{F-}
%{A}
{% endif %}
{% endfor %}
